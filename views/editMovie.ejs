<%-include ('header') -%>
<body>
    <section>
      <h1>Editar Película</h1>
      <form action="/movies/edit/<%= movie.id %>" method="post">
        <label for="title">Título:</label>
        <input type="text" id="title" name="title" value="<%= movie.title %>"><br>
  
        <label for="rating">Calificación:</label>
        <input type="number" id="rating" name="rating" min="0" max="10" step="0.1" value="<%= movie.rating %>"><br>
  
        <label for="awards">Premios:</label>
        <input type="number" id="awards" name="awards" min="0" value="<%= movie.awards %>"><br>
  
        <label for="release_date">Fecha de estreno:</label>
        <input type="date" id="release_date" name="release_date" value="<%= movie.release_date.toISOString().slice(0,10) %>"><br>   
    
     
        <label for="length">Duración (minutos):</label>
        <input type="number" id="length" name="length" min="0" value="<%= movie.length %>"><br>
  
        <label for="genres">Género</label>
        <select name="genres">
          <% for (let i = 0; i < genres.length; i++) { %>
            <% if (genres[i].id == movie.genre_id) { %>
              <option value="<%= genres[i].id %>" selected>
                <%= genres[i].name %>
              </option>
              <% } else { %>
              <option value="<%= genres[i].id %>">
              <%= genres[i].name %>
              </option>
            <% } %>
          <% } %>
        </select><br>
        <br>
        <input type="submit" value="Guardar">
      </form>
    </section>
  </body>